<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- 组件扫描，自动注册@Service注解的Bean -->
    <context:component-scan base-package="com.example.service.impl" />

    <!-- Dubbo应用配置 -->
    <dubbo:application name="dubbo-simple-demo" />

    <!-- 不使用注册中心（直连模式） -->
<!--    <dubbo:registry address="N/A" />-->

    <!-- 注册中心：ZooKeeper -->
<!--    <dubbo:registry id="zkRegistry"-->
<!--                    protocol="zookeeper"-->
<!--                    address="127.0.0.1:2181"/>-->
<!--    <dubbo:registry address="zookeeper://127.0.0.1:2181" client="curator"/>-->
    <dubbo:registry id="zkRegistry"
                    protocol="zookeeper"
                    address="192.168.217.140:2181"/>


    <!-- 协议配置：关键！监听20880端口 -->
    <dubbo:protocol name="dubbo" port="20883" host="0.0.0.0" />

    <!-- 暴露服务：使用Spring Bean helloService -->
    <dubbo:service interface="com.example.service.HelloService"
                   ref="helloService"
                   version="1.0.0" />

</beans>