<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 手动声明Bean -->
    <bean id="helloService" class="com.example.service.impl.HelloServiceImpl" />

    <!-- 使用纯Spring Bean配置Dubbo服务 -->
    <bean id="serviceConfig" class="com.alibaba.dubbo.config.ServiceConfig">
        <property name="interface" value="com.example.service.HelloService" />
        <property name="ref" ref="helloService" />
        <property name="protocols">
            <list>
                <bean class="com.alibaba.dubbo.config.ProtocolConfig">
                    <property name="name" value="dubbo" />
                    <property name="port" value="20880" />
                    <property name="host" value="0.0.0.0" />
                </bean>
            </list>
        </property>
        <property name="application">
            <bean class="com.alibaba.dubbo.config.ApplicationConfig">
                <property name="name" value="dubbo-simple-demo" />
            </bean>
        </property>
        <property name="registry">
            <bean class="com.alibaba.dubbo.config.RegistryConfig">
                <property name="address" value="N/A" />
            </bean>
        </property>
    </bean>
</beans>